<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TitleActivity"
    android:background="@color/burgundy">


    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:padding="30dp"
        android:text="Ready.Set.Eat"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textAlignment="center"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/iv_restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/restaurant_collage"
        />

    <ImageView
        android:id="@+id/iv_proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="46dp"
        android:onClick="onClick"
        android:src="@drawable/bigarrow" />

</RelativeLayout>